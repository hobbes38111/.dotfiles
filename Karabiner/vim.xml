<?xml version="1.0"?>
<root>
  <item>
    <name>Jason Vim</name>
    <item>
      <name>Remap F19 (caps lock) to hyper with Escape on tap</name>
      <appendix>Map F19 to Cmd+Opt+Ctrl</appendix>

      <identifier>caps_lock_to_hyper</identifier>

      <autogen>
        --KeyOverlaidModifier--
        KeyCode::F19,

        KeyCode::COMMAND_L,
        ModifierFlag::OPTION_L | ModifierFlag::CONTROL_L,
        KeyCode::ESCAPE
      </autogen>
    </item>
  </item>
</root>
